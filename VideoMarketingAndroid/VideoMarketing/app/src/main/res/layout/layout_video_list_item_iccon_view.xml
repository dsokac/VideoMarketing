<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <hr.videomarketing.DMVideoView.DMWebVideoView
        android:id="@+id/customVideoViewIc"
        android:layout_height="150dp"
        android:layout_width="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:clickable="false">

    </hr.videomarketing.DMVideoView.DMWebVideoView>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twVideoLabel"
        android:textSize="17sp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/customVideoViewIc"
        android:layout_toEndOf="@+id/myCustomVIewIcon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_bbi_seen"
        android:id="@+id/myCustomVIewIcon"
        android:layout_below="@+id/customVideoViewIc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp" />

</RelativeLayout>