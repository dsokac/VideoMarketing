<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="180dp"
    android:background="@color/colorWhite"
    android:clickable="true">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twVideoLabel"
        android:layout_below="@+id/customVideoView"
        android:layout_alignEnd="@+id/customVideoView"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/customVideoView"
        android:maxLines="2"
        android:minLines="2" />

    <hr.videomarketing.DMVideoView.DMWebVideoView
        android:id="@+id/customVideoView"
        android:layout_height="150dp"
        android:layout_width="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:clickable="false">

    </hr.videomarketing.DMVideoView.DMWebVideoView>
</RelativeLayout>